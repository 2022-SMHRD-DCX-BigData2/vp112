<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.board.mapper.MemberMapper">

  <!--회원가입한 회원정보 받아오기-->
   <insert id="memberJoin" parameterType="kr.board.entity.TblMember">
      insert into member(memid,memPw,memName) 
 	  values(#{memId}, #{memPw}, #{memName})
   </insert>
   
  <!-- 회원정보 가져오기 -->
   <select id="memberLogin" parameterType="kr.board.entity.TblMember"
     resultType="kr.board.entity.TblMember">
     select * from member where memId=#{memId} and memPw=#{memPw} 
   </select>
   
   <!-- 회원정보 업뎃 -->
   <update id="memUpdate" parameterType="kr.board.entity.TblMember">
      <!-- update member set memPw = #{memPw}, memName = #{memName}, memPhone = #{memPhone} -->
      update member set memPw = #{memPw}, memName = #{memName}
      where memId = #{memId}
   </update>
    
</mapper>    