<mapper namespace="kr.board.mapper.BoardMapper">

 <select id="boardList2" resultType="kr.board.entity.Board"> 
      select * from board
  </select>
  
  <insert id="boardInsert2" parameterType="kr.board.entity.Board">
    insert into board(title, content, writer, mem_id)
 	values (#{title},#{content},#{writer},#{mem_id})
  </insert>
  
  <select id="boardContent2" parameterType="int" 
      resultType="kr.board.entity.Board"> 
      select * from board where idx=#{idx}
  </select>
  
  <update id="boardUpdate2" parameterType="kr.board.entity.Board">
      update board set title=#{title}, content=#{content}
      where idx=#{idx}
  </update>

  <delete id="boardDelete2" parameterType="int">     
      delete from board where idx=#{idx}
  </delete>

  <update id="boardContentUpdate2" parameterType="kr.board.entity.Board">
      update board set content=#{content} where idx=#{idx}
  </update>
  
  
    
