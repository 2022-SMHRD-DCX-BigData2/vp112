<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="kr.board.mapper.BoardMapper">
    
  <select id="boardList" resultType="kr.board.entity.Board"> 
      select * from vp112
  </select>
  
  <insert id="boardInsert" parameterType="kr.board.entity.Board">
    insert into vp112(title, content, writer, memId)
 	values (#{title},#{content},#{writer},#{memId})
  </insert>
  
  <select id="boardContent" parameterType="int" 
      resultType="kr.board.entity.Board"> 
      select * from vp112 where idx=#{idx}
  </select>
  
  <update id="boardUpdate" parameterType="kr.board.entity.Board">
      update vp112 set title=#{title}, content=#{content}
      where idx=#{idx}
  </update>

  <delete id="boardDelete" parameterType="int">     
      delete from vp112 where idx=#{idx}
  </delete>

  <update id="boardContentUpdate" parameterType="kr.board.entity.Board">
      update vp112 set content=#{content} where idx=#{idx}
  </update>

  
  
  <select id="memberLogin" parameterType="kr.board.entity.Member"
    resultType="kr.board.entity.Member">
    select * from member where memId=#{memId} and memPw=#{memPw}
  </select>
  


</mapper>
