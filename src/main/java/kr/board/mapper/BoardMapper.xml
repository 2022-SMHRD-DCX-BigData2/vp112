  </insert>
  
  <select id="CmboardContent" parameterType="int" 
      resultType="kr.board.entity.TblCommunity"> 
      select * from tbl_community where commIdx=#{commIdx}
  </select>
  
  <update id="CmboardUpdate" parameterType="kr.board.entity.TblCommunity">
      update tbl_community set commTitle=#{commTitle}, commContent=#{commContent}
      where mem_id=#{mem_id}
  </update>

  <delete id="CmboardDelete" parameterType="int">     
      delete from tbl_community where commIdx=#{commIdx}
  </delete>

  <update id="CmboardContentUpdate" parameterType="kr.board.entity.TblCommunity">
      update tbl_community set commContent=#{commContent} 
      where commIdx=#{commIdx}
  </update>
  
  <update id="CmupdateCount" parameterType="kr.board.entity.TblCommunity">
   	  update tbl_community set commViews=commViews+1 
   	  where commIdx=#{commIdx}
  </update>
  	
  
  
  
