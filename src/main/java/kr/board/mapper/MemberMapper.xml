<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.board.mapper.MemberMapper">

    
  <!-- 회원가입 회원정보 받아오기 -->
  <insert id="memberJoin" parameterType="kr.board.entity.TblMember">
	insert into tbl_member(mem_id,memPw,memName,memPhone) 
 	  values(#{mem_id}, #{memPw}, #{memName}, #{memPhone})
   </insert>

   <!-- 회원정보 아이디 중복확인 -->
   <select id="id_check" parameterType="String"
     resultType="int">
     select count(mem_id) from tbl_member where mem_id = #{mem_id}; 
   </select>
   
  <!-- 로그인. 회원정보 가져오기 -->
   <select id="memberLogin" parameterType="kr.board.entity.TblMember"
     resultType="kr.board.entity.TblMember">
     select * from tbl_member where mem_id=#{mem_id} and memPw=#{memPw}
   </select>
   
   <!-- 회원정보 수정 업뎃 -->
   <update id="memUpdate" parameterType="kr.board.entity.TblMember">
	update tbl_member set memPw = #{memPw}, memName = #{memName}
      where mem_id = #{mem_id}
   </update>

   

</mapper>    